<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <div>
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
      </div>

    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
